doctype html
html(lang="ko")
    head
        title #{pageTitle} | Wetube
        link(rel="stylesheet" href="https://unpkg.com/mvp.css")
        // mvp.css middleware 기본값이 너무못생겨서 넣음.
    body 
        header 
            if fakeUser.loggedIn
                small Hello #{fakeUser.username}!
            nav 
                ul 
                    if fakeUser.loggedIn
                        li 
                            a(href="/login") Logout
                    else
                        li 
                            a(href="/login") Login
            h1=pageTitle
        main 
            block content
    include partials/footer.pug