doctype html
html(lang="ko")
    head
        title #{pageTitle} | Wetube
        link(rel="stylesheet" href="https://unpkg.com/mvp.css")
        // mvp.css middleware 기본값이 너무못생겨서 넣음.
    body 
        header 
            h1=pageTitle
            nav
                ul 
                    if !loggedIn
                        li 
                            a(href="/join") Join
                        li 
                            a(href="/login") Login
                    else
                        li 
                            a(href="/users/logout") Logout
                        li 
                            a(href="/my-profile") #{loggedInUser.username} profile
                    li 
                        a(href="/videos/upload") Upload Video
                    li 
                        a(href="/") go home
                    li 
                        a(href="/search") go Search
        main 
            block content
    include partials/footer.pug